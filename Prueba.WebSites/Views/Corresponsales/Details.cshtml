@model Common.Models.Corresponsal

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Corresponsal</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CorCorresponsalId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CorCorresponsalId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CorNombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CorNombre)
        </dd>
    </dl>
</div>
<div class="form-group">
    @if(Model.Oficinas.ToList().Count > 0)
    {
        <h5>Oficinas del corresponsal</h5>
        <hr />
        <div class="row">
            <div class="col-md-4">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Nombre
                        </th>
                    </tr>                
                </thead>
                <tbody>
                @foreach (var oficina in Model.Oficinas)
                {
                    <tr>
                        <td>@oficina.OfiId</td>
                        <td>@oficina.OfiNombre</td>
                    </tr>                
                }
                </tbody>
            </table>

            </div>
        </div>
    }
    else
    {
        <p>El corresponsal no tiene oficinas.</p>
    }
</div>
<div>
    <div class="row">
        <div class="col-md-12">
            <a asp-action="Edit" asp-route-id="@Model?.CorCorresponsalId"><i class="fa-solid fa-pen-to-square"></i> Editar</a>
        </div>        
    </div>
    <div class="row">
        <div class="col-md-12">
            <a asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Regresar a la lista</a>
        </div>        
    </div>
    
</div>
