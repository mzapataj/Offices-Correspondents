@model Common.Models.Corresponsal

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Corresponsal</h1>

<h3>¿Estás seguro de que desea borrar esto?</h3>
<p>Adicionalmente se eliminarán las oficinas asociadas al corresponsal.</p>
<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CorCorresponsalId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CorCorresponsalId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CorNombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CorNombre)
        </dd>
    </dl>
    <div class="form-group">
        @if(Model.Oficinas.ToList().Count > 0)
        {
            <h5>Oficinas que se eliminarán</h5>
            <hr />
            <div class="row">
                <div class="col-md-4">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Nombre
                            </th>
                        </tr>                
                    </thead>
                    <tbody>
                    @foreach (var oficina in Model.Oficinas)
                    {
                        <tr>
                            <td>@oficina.OfiId</td>
                            <td>@oficina.OfiNombre</td>
                        </tr>                
                    }
                    </tbody>
                </table>

                </div>
            </div>
        }
        else
        {
            <p>El corresponsal no tiene oficinas.</p>
        }



    </div>
    <form asp-action="DeleteConfirm">
        <input type="hidden" asp-for="CorCorresponsalId" />
        <input type="submit" value="Borrar" class="btn btn-danger" />
        <br />
        <br />
        <a asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Regresar a la lista</a>
    </form>
</div>
